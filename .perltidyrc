-l=78   # Max line width is 78 cols
-i=4    # Indent level is 4 cols
-ci=4   # Continuation indent is 4 cols
-et=4   # Convert leading spaces to tabs with 4 cols as indent level

-cti=0  # No extra indentation for closing brackets
-pt=2   # No parenthesis tightness
-bt=2   # No brace tightness
-sbt=2  # No square bracket tightness
-bbt=0  # Maximum block brace tightness
-spp=0  # No spaces before parenthesis
-ce     # Cuddled else/elsif (same line as closing curly brace)
-nsfs   # No space before semicolons
-nolq   # Don't outdent long quoted strings
-iscl   # Ignore side/inline comments length

# Break before all operators
-wbb="% + - * / x != == >= <= =~ !~ < > | & = **= += *= &= <<= &&= -= /= |= >>= ||= //= .= %= ^= x="
